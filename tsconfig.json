{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    /* JSX + React Support */
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    /* Module Settings */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness and JS Support */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,

    /* Path Alias Support */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
